<html>
    <head>
        <title>Vender home</title>
        <%- include('partials/style') %>
    </head>
    <body>
        <h1>Welcome <%= name %></h1>

        <div id="product_info" class="p-3 ">

            <div class="card col-lg-4 p-2 m-auto">
                <br>
                <h1 class="text-center">Shelf the Product</h1>
                <br>
                <div class="mb-3 row">
                    <label for="username" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="name" class="form-control" id="product_name">
                        <div>
                            <span id='product_name_err' class="error_span"></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="price" class="col-sm-2 col-form-label">Price</label>
                    <div class="col-sm-10">
                        <input type="price" class="form-control" id="product_price">
                        <div>
                            <span id='product_price_err' class="error_span"></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="discription" class="col-sm-2 col-form-label">Discription</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="product_discription"></textarea>
                        <div>
                            <span id='product_price_err' class="error_span"></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="photo" class="col-sm-2 col-form-label">Picture</label>
                    <div class="col-sm-10">
                        <input type="file" class="form-control" id="product_pic">
                        <div>
                            <span id='product_pic_err' class="error_span"></span>
                        </div>
                    </div>
                </div>
                <div class=" text-center">
                    <span id='picture_error_msg' class="error_span"></span>
                </div>
                <br>
                <button id="shelf" class="btn btn-dark m-auto">Shelf</button>
                <br>
                
                <!-- <a id="singuplink">Signup</a> -->
            </div>
        </div>
    </body>
    <script src="/vender/venderhome.js" ></script>
    <%- include('partials/scripting') %>
</html>