<html>

<head>
    <title>Vender home</title>
    <%- include('partials/style') %>
</head>

<body>
    <% if(name !="Account" ){ %>
        <%- include('partials/venderlogoutheader'),{name: name}; %>
            <% } else{ %>
                <%- include('partials/venderloginheader')%>
                    <% } %>
                        <h1>Welcome <%= name %>
                        </h1>

                        <div id="container" style="display: flex; flex-direction: row; height: 100vh;">
                            <div id="listedproducts" style="background-image: url(/productimg/shelf.png); height: 90% ; width: 50% ;margin-top: 5%;  scroll-behavior: smooth;" >
                                <div id="myModal"  style="display: none; width: 45%; height: 70%; margin-top: 10%; border: solid; margin-left: 2%;">
                                    <!-- Modal content -->
                                    <div class="Modal-content" style=" width: 100%; border: none; text-align: center; margin-left: 5%; overflow-y: scroll;">
                                        <span id="closeModal" class="Close">&times;</span>
                                        <!-- <p>Simple Modal</p> -->
                                        <div id="popupProduct" >
                                            <img id="popupPicture" style="margin-right: 2px;" height="200px" width="200px"/>
                                            <div id="popupinfo" style="max-width: 40%; text-align: center;">
                                                <h2 id="popupitemname" style="margin-left: 50%;"></h2>
                                                <p id="popupitemdiscription"></p>
                                            </div>
                                            <div>
                                                <h2 id="popupitemprice"></h2>
                                                <h3 style="color: rgb(41,168,85);">Free shipping</h3>
                                                <button id="popupaddtolist">Add to Cart</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- <img src="/productimg/shelf.png" height="90%" width="50%" style="margin-top: 5%;"> -->

                            <div id="product_info" class="p-3 " style=" width: 50%; margin-top: 5%;">

                                <div id="shelfForm" class="card col-lg-4 p-2 m-auto" style=" width: 80%; margin-top: 5%; height: 90%;">
                                    <br>
                                    <h1 class="text-center">Shelf the Product</h1>
                                    <br>
                                    <div class="mb-3 row">
                                        <label for="username" class="col-sm-2 col-form-label">Name</label>
                                        <div class="col-sm-10">
                                            <input type="name" class="form-control" id="product_name">
                                            <div>
                                                <span id='product_name_err' class="error_span"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="price" class="col-sm-2 col-form-label">Price</label>
                                        <div class="col-sm-10">
                                            <input type="price" class="form-control" id="product_price">
                                            <div>
                                                <span id='product_price_err' class="error_span"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="discription" class="col-sm-2 col-form-label">Discription</label>
                                        <div class="col-sm-10">
                                            <textarea class="form-control" id="product_discription"></textarea>
                                            <div>
                                                <span id='product_price_err' class="error_span"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="discription" class="col-sm-2 col-form-label">Available Stock</label>
                                        <div class="col-sm-10">
                                            <input type="price" class="form-control" id="product_stock">
                                            <div>
                                                <span id='product_stock_err' class="error_span"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="photo" class="col-sm-2 col-form-label">Picture</label>
                                        <div class="col-sm-10">
                                            <input type="file" class="form-control" id="product_pic">
                                            <div>
                                                <span id='product_pic_err' class="error_span"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class=" text-center">
                                        <span id='picture_error_msg' class="error_span"></span>
                                    </div>
                                    <br>
                                    <button id="shelf" class="btn btn-dark m-auto">Shelf</button>
                                    <br>

                                    <!-- <a id="singuplink">Signup</a> -->
                                </div>
                            </div>
                        </div>
</body>
<script src="/vender/venderhome.js"></script>
<%- include('partials/scripting') %>

</html>