<html>

<head>
    <%- include('partials/style') %>
    <!-- <link href="/buyer/buyer.css" rel="stylesheet"> -->
</head>

<body style="background-color: rgb(238,238,238);" >
    
    
    <div id="changeform" class="p-3 " style="margin-top: 10%; min-width: 90%;">

        <div class="card col-lg-4 p-2 m-auto">
            <br>
            <h1 class="text-center">Change your account login details</h1>
            <br>
            <div class="mb-3 row">
                <label for="username" class="col-sm-2 col-form-label" style="width: fit-content;">Enter Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="confirm_email">
                    <div>
                        <span id='confirm_email_err' class="error_span"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="username" class="col-sm-2 col-form-label" style="width: fit-content;">Enter new password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="new_password">
                    <div>
                        <span id='login_username_err' class="error_span"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="password" class="col-sm-2 col-form-label" style="width: fit-content;">Confirm new password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="confirm_password">
                    <div>
                        <span id='login_password_err' class="error_span"></span>
                    </div>
                </div>
            </div>
            <div class=" text-center">
                <span id='login_error_msg' style="color: red;" class="error_span"></span>
            </div>
            <br>
            <button id="changeBtn" class="btn btn-dark m-auto">Change</button>
            <br>
            <a href="/buyerlogin"style="margin-left: 45%;">Go Back</a>
         </div>
    </div>

    
</body>
<script src="/changepassword/changepassword.js"></script>
<%- include('partials/scripting') %>

</html>